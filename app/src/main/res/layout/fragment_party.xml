<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Party Name -->
        <TextView
            android:id="@+id/partyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Party Name Here"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Turn Information and End Turn button in one row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <!-- Turn Info container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/currentTurnTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="It is ___ Turn!"
                    android:textSize="18sp"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/nextTurnTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="____'s turn is next!"
                    android:textSize="18sp"
                    android:textColor="@color/text_white" />
            </LinearLayout>

            <!-- End Turn Button -->
            <Button
                android:id="@+id/endTurnButton"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/square_button_ripple"
                android:text="End Turn"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                android:clickable="true"
                android:gravity="center" />


        </LinearLayout>

        <!-- Previous Roll Section -->
        <LinearLayout
            android:id="@+id/previousRollContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dialog_background"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/previousRollHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Roll"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/rollUserNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/diceDetailContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/diceDetail1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="1:0" />

                <TextView
                    android:id="@+id/diceDetail2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="2:0" />

                <TextView
                    android:id="@+id/diceDetail3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="3:0" />

                <TextView
                    android:id="@+id/diceDetail4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="4:0" />

                <TextView
                    android:id="@+id/diceDetail5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="5:0" />

                <TextView
                    android:id="@+id/diceDetail6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="6:0" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/simulateRollButton"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_accent"
            android:text="Simulate Roll"
            android:textColor="@color/text_white" />
    </LinearLayout>
</FrameLayout>
