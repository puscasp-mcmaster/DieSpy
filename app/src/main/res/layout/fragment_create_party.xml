<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".ui.create_party.CreatePartyFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/createPartyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Party"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/createPartyErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/partyNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Party Name"
            android:inputType="text"
            android:padding="14dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/edit_text_bg"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/createPartyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Party"
            android:backgroundTint="@color/primary_accent"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:padding="14dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
