<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/createAccountInstructions"
        android:layout_width="272dp"
        android:layout_height="70dp"
        android:text="Input a new username and password to continue:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Username and Password" />

    <EditText
        android:id="@+id/createAccountUsernameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="New Username" />

    <EditText
        android:id="@+id/createAccountPwInput1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="214dp"
        android:layout_height="22dp"
        android:text="Re-enter password" />

    <EditText
        android:id="@+id/createAccountPwInput2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/createAccountErrorMessage"
        android:layout_width="203dp"
        android:layout_height="20dp"
        android:layout_marginTop="13dp"
        android:textColor="#FF0000" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#6200EE"
        android:padding="12dp"
        android:text="Create Account"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>