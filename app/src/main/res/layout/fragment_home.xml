<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Screen"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/toCreatePartyScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Create Party Screen"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/toJoinPartyScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Join Party Screen"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/toProfileScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Profile Screen"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/toSettingScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Setting Screen"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</FrameLayout>
